<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.clark.custom_view.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:right_button_drawable="@mipmap/icon_add"
        app:title_background_color="@color/green"
        app:title_text="标题1" />

    <com.clark.custom_view.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:right_button_visible="false"
        app:title_background_color="@color/green"
        app:title_text="标题2" />

    <com.clark.custom_view.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:left_button_text="左边"
        app:right_button_text="右边"
        app:title_background_color="@color/red"
        app:title_text="标题3" />

    <com.clark.custom_view.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:left_button_text="左边"
        app:right_button_drawable="@mipmap/icon_add"
        app:title_background_color="@color/red"
        app:title_text="标题4" />

    <com.clark.custom_view.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:left_button_text="左边"
        app:left_button_text_color="@color/red"
        app:right_button_drawable="@mipmap/icon_add"
        app:title_background_color="@color/blue"
        app:title_text="标题5" />

    <com.clark.custom_view.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:left_button_text="左边"
        app:left_button_text_color="@color/red"
        app:right_button_drawable="@mipmap/icon_add"
        app:title_background_color="@color/blue"
        app:title_text="标题6"
        app:title_text_color="@color/black" />

    <com.clark.custom_view.CircularProgressButton
        android:id="@+id/download_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"/>
</LinearLayout>