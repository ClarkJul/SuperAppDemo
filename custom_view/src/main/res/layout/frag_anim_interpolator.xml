<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放动画"/>
        <ToggleButton
            android:id="@+id/toggle"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/toggle"
            android:textOn="@null"
            android:textOff="@null" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转动画"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/test_image"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginVertical="10dp"
            android:src="@mipmap/mm" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动画的插值器参数设置"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2">
            <Button
                android:id="@+id/btn_acc_dec"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="AccDec"/>
            <Button
                android:id="@+id/btn_acc"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="Accelerate"/>
            <Button
                android:id="@+id/btn_dec"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="Decelerate"/>
            <Button
                android:id="@+id/btn_anticipate"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="Anticipate"/>
            <Button
                android:id="@+id/btn_overshoot"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="overshoot"/>
            <Button
                android:id="@+id/btn_anticipate_overshoot"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="antove"/>
            <Button
                android:id="@+id/btn_bounce"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="bounce"/>
            <Button
                android:id="@+id/btn_cycle"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="cycle"/>
            <Button
                android:id="@+id/btn_linear"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:text="linear"/>
        </GridLayout>
    </ScrollView>
</LinearLayout>