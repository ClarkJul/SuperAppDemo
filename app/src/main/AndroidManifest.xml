<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.clark.superappdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name=".SupperApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_start"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/icon_start"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".httpurlconnection.HttpUrlConnectionActivity" />
        <activity android:name=".contentprovider.ContentProviderActivity" />
        <activity android:name=".httpurlconnection.ClientConnectionActivity" />
        <activity android:name=".jiexixml.XmlActivity" />
        <activity android:name="com.clark.download.multidownload.DownloadActivity" />

        <service android:name="com.clark.download.multidownload.DownloadService" />
        <service android:name=".download.downloadtwo.service.MultiDownloadService" />

        <activity android:name=".download.downloadtwo.view.MultiDownloadActivity" />
        <activity android:name=".experiment.AdapterActivity" />
        <activity android:name=".custom_control.animation.AnimationActivity" />
        <activity android:name=".ui_thread_multithread.UIMultiThreadActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.android.clark.superappdemo.download.installapk"
            android:exported="false"
            android:grantUriPermissions="true">

            <!-- 元数据 -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path" />
        </provider>
        <provider
            android:name=".download.downloadtwo.content_provider.DownloadContentProvider"
            android:authorities="com.android.clark.superappdemo.provider"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".download.downloadtwo.view.DownloadedActivity" />
        <activity android:name=".broadcast.LoginActivity" />
        <activity android:name=".broadcast.BroadcastTestActivity" />
        <activity android:name=".eventbus.EventBUS1Activity" />
        <activity android:name=".eventbus.EventBus2Activity" />
        <activity android:name=".banner.BannerActivity" />
        <activity android:name=".banner.custom_banner.BannerTestActivity" />
        <activity android:name=".custom_control.CustomControlActivity" />
        <activity android:name=".custom_control.draw_picture.DrawPictureActivity"></activity>
    </application>

</manifest>