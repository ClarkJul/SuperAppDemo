<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/img_display"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/icon_strawberry"/>
        <TextView
            android:id="@+id/text_display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_display"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="草莓"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_display2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_display1"
            android:layout_marginTop="50dp"
            android:text="从花园到餐桌，草莓如何被人类逼成了“最脏蔬果”?" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_send_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送对象消息"/>

</LinearLayout>