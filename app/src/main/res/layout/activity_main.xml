<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/mm"
    android:backgroundTintMode="multiply"
    android:backgroundTint="#80ffffff"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_http_url_connection_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GetUrlConn"/>
        <Button
            android:id="@+id/btn_http_url_connection_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ClientUrlConn"/>
        <Button
            android:id="@+id/btn_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解析xml"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_service_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载(服务)" />
        <Button
            android:id="@+id/btn_service_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多任务下载"/>
        <Button
            android:id="@+id/btn_content_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容提供器"/>
        <Button
            android:id="@+id/btn_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广播" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_experiment_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="适配器" />
        <Button
            android:id="@+id/btn_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Banner" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_custom_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义控件"/>
        <Button
            android:id="@+id/btn_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画"/>
        <Button
            android:id="@+id/btn_draw_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绘图"/>
        <Button
            android:id="@+id/btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视图"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_update_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI更新"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_event_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="EventBus"/>
    </LinearLayout>
</LinearLayout>